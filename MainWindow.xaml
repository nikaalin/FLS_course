<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="270*"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="317*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="DangerDataGrid" IsReadOnly="True" Grid.RowSpan="3" Margin="0,0,9.6,0.2" MouseDoubleClick="ShowDangerDetailInfo" />
        <Button Name="UpdateButton" Content="Обновить" Grid.ColumnSpan="2" Margin="10.4,10,21.6,4.4" Grid.Column="1" Click="Update"/>
        <Button Name="SaveButton" Content="Сохранить" Grid.ColumnSpan="2" Margin="10.4,20.6,21.6,2.8" Grid.Column="1" Grid.Row="1" Click="SafeFile"/>
    </Grid>
</Window>
